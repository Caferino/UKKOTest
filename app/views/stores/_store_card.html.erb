<!-- app/views/stores/_store_card.html.erb -->

<!-- Store Card Menu -->
<div class="card">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
        <li class="nav-item">
            <%= link_to 'Info', '#', class: 'nav-link active', data: { section: 'info' } %>
        </li>
        <li class="nav-item">
            <%= link_to 'Stock', '#', class: 'nav-link', data: { section: 'stock' } %>
        </li>
        <li class="nav-item">
            <%= link_to 'Config', '#', class: 'nav-link', data: { section: 'config' } %>
        </li>
        </ul>
    </div>


    <!-- Content Sections -->


    <!-- Photo and Description -->
    <div class="card-body">
        <div class="row no-gutters">
            <div class="col-md-4 store-card-image-container">
                <%= image_tag 'imagePlaceholder.jpg', alt: 'Card Image', class: 'card-img' %>
            </div>
            <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"> <%= store.codename %> </h5>
                <p class="card-text">Address: <%= store.address %> </p>
                <p class="card-text">Phone: <%= store.phone %> </p>
                <a href="#" class="btn btn-primary">Save</a>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
        </div>
    </div>

    <div>
        <%= link_to "Edit this store", edit_store_path(@stores.find(store.id)) %> |
        <%= link_to "Back to stores", stores_path %>

        <%= button_to "Destroy this store", @store, method: :delete %>
    </div>
</div><br>