<!-- app/views/books/_book_card.html.erb -->

<!-- Book Card -->
<div class="card">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
        <li class="nav-item">
            <a class="nav-link active" >Info</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" >Libraries</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" >Config</a>
        </li>
        </ul>
    </div>

    <!-- Photo and Description -->
    <div class="card-body">
        <div class="row no-gutters">
            <div class="col-md-4 store-card-image-container">
                <%= image_tag 'imagePlaceholder.jpg', alt: 'Card Image', class: 'card-img' %>
            </div>
            <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"> <%= book.title %> </h5>
                <p class="card-text">Address: <%= book.author %> </p>
                <p class="card-text">Phone: <%= book.year %> </p>
                <br>
                <h4>Assign to Store</h4>
                <%= render partial: 'stocks/stock_form', locals: { book: book } %>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
        </div>
    </div>

    <div>
        <%= link_to "Edit this book", edit_book_path(@books.find(book.id)) %> |
        <%= link_to "Back to books", books_path %>

        <%= button_to "Destroy this book", @book, method: :delete %>
    </div>

</div><br>