<!DOCTYPE html>
<html>
  <head>
    <title>Registration</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'dashboard', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <!-- Dashboard Container -->
    <div class="dashboard-style">
        <div class="dashboard-content">
        
            <!-- === Header === -->
            <header class="header-content">

                <!-- Logo -->
                <%= image_tag 'logoWhite.png', alt: 'Logo', class: 'logo-dashboard', id: 'logo', style: 'cursor: pointer;', onclick: 'toggleNavBar()' %>

                
                <div class="navbar-nav">
                    <div class="nav-item text-nowrap">

                    <a id='logout-link' href='#' style='cursor: pointer;' onclick='logout()'>
                        <%= image_tag 'logoutWhite.svg', alt: 'logout', class: 'logout' %>
                        <%= image_tag 'logoutRed.svg', alt: 'logout', class: 'logout-hover' %>
                    </a>

                    </div>
                </div>

            </header>


            <!-- === NavBar === -->
            <div class="container-fluid">
                <div class="row">

                    <span class="dashboardContent-wrapper">

                        <nav id="sideBarMenu" class="navBarWidth">
                            <div class="position-sticky pt-3 sidebar-sticky">

                            <!-- Profile Photo -->
                            <div class="profilePhoto">
                                <!-- LOGIC -->
                            </div>
                            <p> <!-- ESPACIO --> </p>


                            <!-- Welcome Username -->
                            <div class="profileName">
                                <div>
                                    <p>Welcome, <%= @current_user.name %>!</p>
                                </div>
                            </div>
                            <p> <!-- Espacio --> </p>

                            <!-- === Sections === -->
                            
                            <ul class="nav flex-column">

                                <!-- Stores -->
                                <li class="nav-item">
                                    <div>
                                    <a class="navLink" onClick="">
                                        <img class="navbarIcons" src='/assets/add_story.svg' />
                                        <span class="navbarText" >Stores</span>
                                    </a>
                                    </div>
                                </li>
                                <p> <!-- Espacio --> </p>


                                <!-- Books -->
                                <li class="nav-item">
                                    <div>
                                    <a class="navLink" onClick="">
                                        <img class="navbarIcons" src='/assets/stories.svg' />
                                        <span class="navbarText" >Books</span>
                                    </a>
                                    </div>
                                </li>
                                <p> <!-- Espacio --> </p>

                            </ul>

                            </div>
                        </nav>

                        <main class="editorsWidth">
                            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 border-bottom">

                                <!-- Content Header -->
                                <h2 style={{paddingLeft:'6px', margin:'none', marginBottom:'0px'}}>Vista Previa</h2>

                                <div class="btn-toolbar mb-2 mb-md-0">
                                    <div class="btn-group me-2">

                                        <!-- Content -->
                                        <span>
                                            <button type="button" class="btn btn-sm btn-outline-secondary">Guardar √Årbol</button>
                                            <span class="saveAndExportSeparator">|</span>
                                            <button type="button" class="btn btn-sm btn-outline-secondary">Exportar Rama</button>
                                            <span class="saveAndExportSeparator">|</span>
                                            <button type="button" class="btn btn-sm btn-outline-secondary">Generar Reporte</button>
                                            <span class="saveAndExportSeparator">|</span>
                                            <button type="button" class="btn btn-sm btn-outline-secondary">Generar PDF</button>
                                        </span>

                                        <div class="input-group">
                                            <div class="form-outline">
                                                <input type="search" id="form1" class="form-control" />
                                                <label class="form-label" for="form1">Search</label>
                                            </div>
                                            <button type="button" class="btn btn-primary">
                                                <i class="fas fa-search"></i>
                                            </button>
                                        </div>

                                    </div>
                                </div>
                                
                            </div>
                            
                        </main>

                    </span>

                </div>
            </div>

            <%= yield %>

        </div>
    </div>
  </body>
</html>