<!-- Dashboard Content Area -->
<main class="editorsWidth">
    
    <!-- Search Bar -->
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 border-bottom">
        <div class="input-group">
            <div class="form-outline">
                <input type="search" id="form1" class="form-control" />
                <label class="form-label" for="form1">Search</label>
            </div>
            <button type="button" class="btn btn-primary">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </div>

    <!-- Dashboard Content -->
    <!-- Automated Cards -->
    <!-- Will load Bookstores or Books that exist in the DB -->
    <div class="container-for-content">
        <!-- Stores Cards -->
        <div id="container-for-stores" class="hiddenContent">
            <div class="dashboard-content-title">
                <h1> Stores </h1>
            </div>
            <% @stores.each do |store| %>
                <!-- render partial: 'stores/store_card', locals: { store: store } -->
            <% end %>
        </div>
        <!-- IMPORTANT: For some strange reason, nothing after here is being read at all as seen in the browsers Inspect -->
        <!-- I found out its the ruby loop, "there can only be one", which is odd -->

        <h1> Test </h1>

        <!-- Books Cards -->
        <div id="container-for-books" class="hiddenContent">
            <div class="dashboard-content-title">
                <h1> Books </h1>
            </div>
            <% @books.each do |book| %>
                <!-- render partial: 'books/book_card', locals: { book: book } -->
            <% end %>
        </div>
    </div>

</main>